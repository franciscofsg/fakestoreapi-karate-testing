<configuration>

    <!-- Desactiva logs de Apache HttpClient -->
    <logger name="org.apache.http" level="OFF"/>
    <logger name="org.apache.http.wire" level="OFF"/>
    <logger name="org.apache.http.impl.conn" level="OFF"/>
    <logger name="org.apache.http.impl.client" level="OFF"/>
    <logger name="org.apache.http.impl.execchain" level="OFF"/>
    <logger name="org.apache.http.impl.conn.PoolingHttpClientConnectionManager" level="OFF"/>

    <!-- Appender para consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Mantiene logs de Karate -->
    <logger name="com.intuit.karate" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
